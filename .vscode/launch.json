    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "BROWSER": "none"
            },
            "cwd": "${workspaceFolder}/packages/shopify-blank-theme"
        },
        {
            "command": "npm run build",
            "name": "Run npm build",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "BROWSER": "none"
            },
            "cwd": "${workspaceFolder}/packages/shopify-blank-theme"
        },
        {
            "command": "npm run dev",
            "name": "NextJS dev",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "NODE_OPTIONS": "--inspect",
                "PORT": "3333"
            },
            "cwd": "${workspaceFolder}/next-packages/shopify-nextjs-theme"
        }
    ]
}
