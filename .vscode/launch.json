    "version": "0.2.0",
    "configurations": [
        {
            "name": "ESDoc",
            "request": "launch",
            "runtimeArgs": [
                "esdoc"
            ],
            "runtimeExecutable": "yarn",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "BROWSER": "none"
            },
            "cwd": "${workspaceFolder}/packages/shopify-blank-theme"
        },
        {
            "command": "npm run build",
            "name": "Run npm build",
            "request": "launch",
            "type": "node-terminal",
            "env": {
                "BROWSER": "none"
            },
            "cwd": "${workspaceFolder}/packages/shopify-blank-theme"
        }
    ]
}
